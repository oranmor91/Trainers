<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:mvc="http://www.springframework.org/schema/mvc"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context.xsd
     http://www.springframework.org/schema/mvc
     http://www.springframework.org/schema/mvc/spring-mvc.xsd">
 
<mvc:annotation-driven />
 
 <import resource="hibernateConfig.xml"/>
<context:component-scan base-package="com.trainer.controller" />
<context:component-scan base-package="com.trainer.manager" />
<context:component-scan base-package="com.trainer.manager.impl" />
<context:component-scan base-package="com.trainer.entity" />
<context:component-scan base-package="com.trainer.visitors" />
<context:component-scan base-package="com.trainer.visitors.impl" />
<context:component-scan base-package="com.trainer.dao" />
<context:component-scan base-package="com.trainer.dao.impl" />
<mvc:default-servlet-handler/>

</beans>